{
  "swagger": "2.0",
  "securityDefinitions": {
    "Bearer": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header",
      "description": "Enter your bearer token in the format **Bearer &lt;token>**"
    }
  },
  "info": {
    "description": "Learning React Native API",
    "version": "1.0.0",
    "title": "Learning React Native API",
    "contact": {}
  },
  "basePath": "/api",
  "paths": {
    "/user/register": {
      "post": {
        "tags": ["User"],
        "summary": "Register new account",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "responses": {},
        "parameters": [
          {
            "in": "body",
            "name": "UserInfo",
            "required": true,
            "schema": {
              "type": "object",
              "required": ["username", "password"],
              "properties": {
                "username": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                }
              }
            }
          }
        ]
      }
    },
    "/user/login": {
      "post": {
        "tags": ["User"],
        "summary": "Request Login",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "responses": {},
        "parameters": [
          {
            "in": "body",
            "name": "LoginInfo",
            "required": true,
            "schema": {
              "type": "object",
              "required": ["username", "password"],
              "properties": {
                "username": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                }
              }
            }
          }
        ]
      }
    },
    "/user/changePassword": {
      "put": {
        "tags": ["User"],
        "security": [{ "Bearer": [] }],
        "summary": "Change password",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "responses": {},
        "parameters": [
          {
            "in": "body",
            "name": "UserInfo",
            "required": true,
            "schema": {
              "type": "object",
              "required": ["username", "oldPassword", "newPassword"],
              "properties": {
                "userId": {
                  "type": "string"
                },
                "oldPassword": {
                  "type": "string"
                },
                "newPassword": {
                  "type": "string"
                }
              }
            }
          }
        ]
      }
    },
    "/user": {
      "get": {
        "tags": ["User"],
        "summary": "Get user list",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "responses": {}
      }
    },
    "/user/{userId}": {
      "get": {
        "tags": ["User"],
        "summary": "Get user by ID",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "responses": {},
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "description": "ID of user to return",
            "required": true,
            "type": "string"
          }
        ]
      }
    }
  }
}
